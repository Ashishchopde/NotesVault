<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NotesVault</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Background Styles */
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
      background: #000000;
      overflow-x: hidden;
      position: relative;
      color: white;
      display: flex;
      flex-direction: column;
    }

    /* Main content wrapper */
    .main-content {
      flex: 1 0 auto;
      padding-bottom: 60px; /* Add padding to prevent footer overlap */
    }

    /* Blob Animation */
    .blob-bg {
      position: fixed;
      top: -150px;
      left: -150px;
      z-index: -2;
    }

    .blob {
      width: 500px;
      height: 500px;
      background: linear-gradient(135deg, #ff6ec4, #7873f5);
      border-radius: 50%;
      animation: blob 20s infinite ease-in-out;
      filter: blur(120px);
      opacity: 0.5;
    }

    @keyframes blob {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(100px, 80px) scale(1.1); }
      66% { transform: translate(-80px, 100px) scale(0.9); }
    }

    /* Starfield Canvas */
    #starfield {
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      z-index: -3;
      background: transparent;
    }

    /* Navbar Styles */
    .navbar {
      background: transparent !important;
      position: relative;
      z-index: 1000;
    }

    .navbar-brand {
      display: flex;
      align-items: center;
      flex-direction: row-reverse; /* Reverse the order of elements */
    }

    .navbar-brand img {
      height: 40px;
      width: auto;
      margin-right: 0; /* Remove right margin */
      margin-left: 0; /* Remove left margin */
    }

    .brand-text {
      font-size: 1.5rem;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
      letter-spacing: 1px;
    }

    .nav-link {
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .nav-link:hover {
      color: rgba(255, 255, 255, 0.8) !important;
    }

    .brand-name {
      font-size: 1.8rem;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
      letter-spacing: 1px;
      position: relative;
      padding: 0 5px;
    }

    .brand-name::after {
      content: '';
      position: absolute;
      bottom: -3px;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, #fff, transparent);
      opacity: 0.5;
    }

    /* Card styles */
    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      transition: all 0.3s ease;
      margin-bottom: 20px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      color: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    /* Dropdown styles */
    .form-control {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      color: white;
    }

    .form-control option {
      background: #2c2c2c;
      color: white;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.15);
      border-color: rgba(255, 255, 255, 0.3);
      color: white;
      box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.1);
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    /* Welcome Section Styles */
    .welcome-section {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.95);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.5s ease, visibility 0.5s ease;
    }

    .welcome-section.active {
      opacity: 1;
      visibility: visible;
    }

    .welcome-content {
      text-align: center;
      transform: translateY(20px);
      opacity: 0;
      transition: transform 0.5s ease, opacity 0.5s ease;
    }

    .welcome-section.active .welcome-content {
      transform: translateY(0);
      opacity: 1;
    }

    .welcome-title {
      font-size: 3.5rem;
      font-weight: 700;
      color: white;
      margin-bottom: 1rem;
      text-shadow: 0 0 20px rgba(120, 115, 245, 0.5);
      background: linear-gradient(45deg, #7873f5, #ec4899);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: titleGlow 2s ease-in-out infinite;
    }

    .welcome-subtitle {
      font-size: 1.5rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 2rem;
    }

    .welcome-features {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .feature-item {
      text-align: center;
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .welcome-section.active .feature-item {
      opacity: 1;
      transform: translateY(0);
    }

    .feature-item:nth-child(1) { transition-delay: 0.2s; }
    .feature-item:nth-child(2) { transition-delay: 0.4s; }
    .feature-item:nth-child(3) { transition-delay: 0.6s; }

    .feature-icon {
      font-size: 2.5rem;
      color: #7873f5;
      margin-bottom: 1rem;
      text-shadow: 0 0 15px rgba(120, 115, 245, 0.5);
    }

    .feature-text {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.1rem;
    }

    .welcome-button {
      background: linear-gradient(45deg, #7873f5, #6c5ce7);
      color: white;
      border: none;
      border-radius: 30px;
      padding: 1rem 2.5rem;
      font-size: 1.2rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      opacity: 0;
      transform: translateY(20px);
    }

    .welcome-section.active .welcome-button {
      opacity: 1;
      transform: translateY(0);
      transition-delay: 0.8s;
    }

    .welcome-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(108, 92, 231, 0.4);
    }

    @keyframes titleGlow {
      0%, 100% { text-shadow: 0 0 20px rgba(120, 115, 245, 0.5); }
      50% { text-shadow: 0 0 30px rgba(120, 115, 245, 0.8); }
    }

    @media (max-width: 768px) {
      .welcome-title {
        font-size: 2.5rem;
      }

      .welcome-subtitle {
        font-size: 1.2rem;
      }

      .welcome-features {
        flex-direction: column;
        gap: 1.5rem;
      }

      .feature-icon {
        font-size: 2rem;
      }

      .feature-text {
        font-size: 1rem;
      }
    }

    /* Section Title Styles */
    .section-title {
      color: white;
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      position: relative;
      padding-bottom: 0.5rem;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 50px;
      height: 3px;
      background: linear-gradient(90deg, #7873f5, #ec4899);
      border-radius: 3px;
    }

    /* Educational Categories Styles */
    .category-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 1rem; /* Reduced padding */
      text-align: center;
      transition: all 0.3s ease;
      height: 100%;
    }

    .category-card:hover {
      transform: translateY(-10px);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    .category-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #7873f5;
      text-shadow: 0 0 10px rgba(120, 115, 245, 0.5);
    }

    .category-card h3 {
      color: white;
      font-size: 1.1rem; /* Reduced font size */
      margin-bottom: 0.5rem;
    }

    .category-card p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.8rem; /* Reduced font size */
      margin-bottom: 0;
    }

    /* Study Tips Styles */
    .tip-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 1.5rem;
      height: 100%;
      transition: all 0.3s ease;
    }

    .tip-card:hover {
      transform: translateY(-5px);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    .tip-icon {
      font-size: 2rem;
      color: #7873f5;
      margin-bottom: 1rem;
      text-shadow: 0 0 10px rgba(120, 115, 245, 0.5);
    }

    .tip-card h4 {
      color: white;
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .tip-list {
      list-style: none;
      padding-left: 0;
      margin-bottom: 0;
    }

    .tip-list li {
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0.5rem;
      padding-left: 1.5rem;
      position: relative;
    }

    .tip-list li::before {
      content: 'â€¢';
      color: #7873f5;
      position: absolute;
      left: 0;
      font-size: 1.2rem;
    }

    /* Documents Section Styles */
    .documents-section {
      padding-top: 2rem;
    }

    /* Add responsive spacing between cards */
    .document-card {
      margin-bottom: 30px; /* Increased spacing between cards */
    }

    @media (max-width: 768px) {
      .document-card {
        margin-bottom: 40px; /* Even more spacing on mobile */
      }
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      background: rgba(255, 255, 255, 0.15);
    }

    .card-body {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      flex-grow: 1; /* Make card body take remaining space */
    }

    .card-title {
      color: white;
      font-weight: 600;
      margin-bottom: 1rem;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2; /* Limit to 2 lines */
      -webkit-box-orient: vertical;
      min-height: 48px; /* Fixed height for title */
    }

    .card-text {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .card-actions {
      margin-top: auto; /* Push buttons to bottom */
      display: flex;
      gap: 10px;
    }

    .btn-secondary, .btn-download {
      background: linear-gradient(45deg, #6c5ce7, #a29bfe);
      border: none;
      border-radius: 25px;
      padding: 8px 20px;
      transition: all 0.3s ease;
      color: white;
      flex: 1; /* Make buttons take equal space */
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
    }

    .btn-download {
      background: linear-gradient(45deg, #00b894, #00cec9);
    }

    .btn-secondary:hover, .btn-download:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
      color: white;
    }

    .btn-download:hover {
      box-shadow: 0 5px 15px rgba(0, 184, 148, 0.4);
    }

    /* Container adjustment */
    .container {
      position: relative;
      z-index: 1;
    }

    /* Admin Edit Button */
    .admin-actions {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .btn-edit {
      background: linear-gradient(45deg, #ff6ec4, #7873f5);
      border: none;
      border-radius: 25px;
      padding: 8px 20px;
      transition: all 0.3s ease;
      color: white;
    }

    .btn-edit:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(255, 110, 196, 0.4);
    }

    /* Footer Styles */
    .footer {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 1000;
      margin-top: auto;
      width: 100%;
      flex-shrink: 0;
    }

    .footer p {
      font-size: 0.9rem;
    }

    .footer .fa-heart {
      animation: heartbeat 1.5s infinite;
    }

    @keyframes heartbeat {
      0% { transform: scale(1); }
      14% { transform: scale(1.3); }
      28% { transform: scale(1); }
      42% { transform: scale(1.3); }
      70% { transform: scale(1); }
    }

    /* Document Card Styles */
    .document-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .document-card:hover {
      transform: translateY(-5px);
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 12px;
      transition: all 0.3s ease;
      height: 100%;
      overflow: hidden;
      position: relative;
    }

    .card:hover {
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      background: rgba(255, 255, 255, 0.15);
    }

    .card-icon {
      position: absolute;
      top: -15px;
      right: -15px;
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #7873f5, #6c5ce7);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
      z-index: 1;
    }

    .card-icon i {
      font-size: 1.5rem;
      color: white;
    }

    .card-body {
      padding: 1.25rem;
      display: flex;
      flex-direction: column;
      height: 100%;
      gap: 0.75rem;
      position: relative;
      z-index: 0;
    }

    .card-header-custom {
      padding-bottom: 0.5rem;
      margin-bottom: 0.25rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .card-title {
      color: white;
      font-weight: 600;
      margin: 0;
      font-size: 1rem;
      line-height: 1.4;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      min-height: 2.8em;
      word-break: break-word;
    }

    .card-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .card-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .badge {
      padding: 0.35rem 0.6rem;
      font-size: 0.8rem;
      border-radius: 15px;
      background: rgba(255, 255, 255, 0.1);
      color: white;
      border: 1px solid rgba(255, 255, 255, 0.2);
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 100%;
    }

    .badge i {
      font-size: 0.8rem;
      flex-shrink: 0;
    }

    .card-date {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.8rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .card-date i {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.9rem;
    }

    .card-actions {
      display: flex;
      gap: 0.5rem;
      margin-top: auto;
      padding-top: 0.75rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn {
      flex: 1;
      border-radius: 15px;
      padding: 0.4rem 0.75rem;
      font-size: 0.85rem;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.4rem;
      border: none;
      white-space: nowrap;
    }

    .btn-view {
      background: linear-gradient(45deg, #7873f5, #6c5ce7);
      color: white;
    }

    .btn-download {
      background: linear-gradient(45deg, #00b894, #00cec9);
      color: white;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      color: white;
    }

    .btn-view:hover {
      background: linear-gradient(45deg, #6c5ce7, #7873f5);
    }

    .btn-download:hover {
      background: linear-gradient(45deg, #00cec9, #00b894);
    }

    /* Responsive Styles */
    @media (max-width: 1200px) {
      .card-title {
        font-size: 0.95rem;
      }
      
      .badge {
        padding: 0.3rem 0.5rem;
      }
    }

    @media (max-width: 992px) {
      .document-card {
        margin-bottom: 1.25rem;
      }
    }

    @media (max-width: 768px) {
      .card-body {
        padding: 1rem;
        gap: 0.5rem;
      }

      .card-title {
        font-size: 0.9rem;
        min-height: 2.6em;
      }

      .badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.4rem;
      }

      .btn {
        padding: 0.35rem 0.6rem;
        font-size: 0.8rem;
      }

      .card-date {
        font-size: 0.75rem;
      }

      .card-icon {
        width: 50px;
        height: 50px;
      }

      .card-icon i {
        font-size: 1.25rem;
      }
    }

    @media (max-width: 576px) {
      .card-actions {
        flex-direction: column;
        gap: 0.4rem;
      }

      .btn {
        width: 100%;
      }

      .card-meta {
        justify-content: center;
      }

      .card-date {
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <!-- Starfield -->
  <canvas id="starfield"></canvas>

  <!-- Blob -->
  <div class="blob-bg">
    <div class="blob"></div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <div class="navbar-brand">
        <a href="/" class="navbar-item">
          NotesVault
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin"><i class="fas fa-user-shield"></i> Admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="main-content">
    <div class="container mt-5">
      <!-- Welcome Section -->
      <div class="welcome-section" id="welcomeSection">
        <div class="welcome-content">
          <h1 class="welcome-title">Welcome to NotesVault</h1>
          <p class="welcome-subtitle">Your Ultimate Document Management Solution</p>
          
          <div class="welcome-features">
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-file-alt"></i>
              </div>
              <div class="feature-text">Easy Document Management</div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-search"></i>
              </div>
              <div class="feature-text">Quick Search & Filter</div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fas fa-shield-alt"></i>
              </div>
              <div class="feature-text">Secure & Reliable</div>
            </div>
          </div>

          <button class="welcome-button" onclick="closeWelcome()">
            Get Started <i class="fas fa-arrow-right ml-2"></i>
          </button>
        </div>
      </div>

      <!-- Filter Controls -->
      <div class="container mt-4">
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="form-group">
              <label for="categoryFilter" class="text-white">Category</label>
              <select class="form-control" id="categoryFilter">
                <option value="">All Categories</option>
                <option value="computer_science">Computer Science</option>
                <option value="mining">Mining</option>
                <option value="it">Information Technology</option>
                <option value="electrical">Electrical</option>
                <option value="civil">Civil</option>
                <option value="mechanical">Mechanical</option>
                <option value="electronics">Electronics</option>
              </select>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="searchFilter" class="text-white">Search</label>
              <input type="text" class="form-control" id="searchFilter" placeholder="Search documents...">
            </div>
          </div>
        </div>
      </div>

      <!-- Documents Section -->
      <div class="documents-section" id="documents">
        <div class="row">
          <div class="col-12">
            <h2 class="section-title mb-4">Available Documents</h2>
          </div>
        </div>
        <div class="row" id="documentList">
          <% documents.forEach(doc => { %>
            <div class="col-xl-3 col-lg-4 col-md-6 mb-4 document-card" 
                 data-category="<%= doc.category %>"
                 data-title="<%= doc.title.toLowerCase() %>">
              <div class="card h-100">
                <div class="card-icon">
                  <i class="fas fa-book-open"></i>
                </div>
                <div class="card-body">
                  <div class="card-header-custom">
                    <h5 class="card-title" title="<%= doc.title %>"><%= doc.title %></h5>
                  </div>
