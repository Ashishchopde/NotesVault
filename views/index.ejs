<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>NotesVault</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Background Styles */
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
      background: #000000;
      overflow-x: hidden;
      position: relative;
      color: white;
      display: flex;
      flex-direction: column;
    }

    /* Main content wrapper */
    .main-content {
      flex: 1 0 auto;
      padding-bottom: 60px; /* Add padding to prevent footer overlap */
    }

    /* Blob Animation */
    .blob-bg {
      position: fixed;
      top: -150px;
      left: -150px;
      z-index: -2;
    }

    .blob {
      width: 500px;
      height: 500px;
      background: linear-gradient(135deg, #ff6ec4, #7873f5);
      border-radius: 50%;
      animation: blob 20s infinite ease-in-out;
      filter: blur(120px);
      opacity: 0.5;
    }

    @keyframes blob {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(100px, 80px) scale(1.1); }
      66% { transform: translate(-80px, 100px) scale(0.9); }
    }

    /* Starfield Canvas */
    #starfield {
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      z-index: -3;
      background: transparent;
    }

    /* Navbar Styles */
    .navbar {
      background: transparent !important;
      position: relative;
      z-index: 1000;
    }

    .navbar-brand {
      display: flex;
      align-items: center;
      flex-direction: row-reverse; /* Reverse the order of elements */
    }

    .navbar-brand img {
      height: 40px;
      width: auto;
      margin-right: 0; /* Remove right margin */
      margin-left: 0; /* Remove left margin */
    }

    .brand-text {
      font-size: 1.5rem;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
      letter-spacing: 1px;
    }

    .nav-link {
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .nav-link:hover {
      color: rgba(255, 255, 255, 0.8) !important;
    }

    .brand-name {
      font-size: 1.8rem;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
      letter-spacing: 1px;
      position: relative;
      padding: 0 5px;
    }

    .brand-name::after {
      content: '';
      position: absolute;
      bottom: -3px;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, #fff, transparent);
      opacity: 0.5;
    }

    /* Card styles */
    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      transition: all 0.3s ease;
      margin-bottom: 20px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      color: white;
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    /* Welcome Section Styles */
    .welcome-section {
      padding: 2rem 0;
    }

    .welcome-section h1 {
      color: white;
      font-weight: 600;
      text-shadow: 0 0 15px rgba(120, 115, 245, 0.5);
    }

    .welcome-section .lead {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.25rem;
    }

    /* Section Title Styles */
    .section-title {
      color: white;
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      position: relative;
      padding-bottom: 0.5rem;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 50px;
      height: 3px;
      background: linear-gradient(90deg, #7873f5, #ec4899);
      border-radius: 3px;
    }

    /* Category Card Styles */
    .category-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      height: 100%;
    }

    .category-card:hover {
      transform: translateY(-10px);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    .category-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #7873f5;
      text-shadow: 0 0 10px rgba(120, 115, 245, 0.5);
    }

    .category-card h3 {
      color: white;
      font-size: 1.25rem;
      margin-bottom: 0.5rem;
    }

    .category-card p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
      margin-bottom: 0;
    }

    /* Study Tips Styles */
    .tip-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 1.5rem;
      height: 100%;
      transition: all 0.3s ease;
    }

    .tip-card:hover {
      transform: translateY(-5px);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
    }

    .tip-icon {
      font-size: 2rem;
      color: #7873f5;
      margin-bottom: 1rem;
      text-shadow: 0 0 10px rgba(120, 115, 245, 0.5);
    }

    .tip-card h4 {
      color: white;
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .tip-list {
      list-style: none;
      padding-left: 0;
      margin-bottom: 0;
    }

    .tip-list li {
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 0.5rem;
      padding-left: 1.5rem;
      position: relative;
    }

    .tip-list li::before {
      content: 'â€¢';
      color: #7873f5;
      position: absolute;
      left: 0;
      font-size: 1.2rem;
    }

    /* Documents Section Styles */
    .documents-section {
      padding-top: 2rem;
    }

    /* Add responsive spacing between cards */
    .document-card {
      margin-bottom: 30px; /* Increased spacing between cards */
    }

    @media (max-width: 768px) {
      .document-card {
        margin-bottom: 40px; /* Even more spacing on mobile */
      }
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
      background: rgba(255, 255, 255, 0.15);
    }

    .card-body {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      flex-grow: 1; /* Make card body take remaining space */
    }

    .card-title {
      color: white;
      font-weight: 600;
      margin-bottom: 1rem;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2; /* Limit to 2 lines */
      -webkit-box-orient: vertical;
      min-height: 48px; /* Fixed height for title */
    }

    .card-text {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .card-actions {
      margin-top: auto; /* Push buttons to bottom */
      display: flex;
      gap: 10px;
    }

    .btn-secondary, .btn-download {
      background: linear-gradient(45deg, #6c5ce7, #a29bfe);
      border: none;
      border-radius: 25px;
      padding: 8px 20px;
      transition: all 0.3s ease;
      color: white;
      flex: 1; /* Make buttons take equal space */
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
    }

    .btn-download {
      background: linear-gradient(45deg, #00b894, #00cec9);
    }

    .btn-secondary:hover, .btn-download:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
      color: white;
    }

    .btn-download:hover {
      box-shadow: 0 5px 15px rgba(0, 184, 148, 0.4);
    }

    /* Search bar styles */
    .search-container {
      position: relative;
      margin-right: 15px;
    }

    .search-input {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 25px;
      padding: 8px 20px;
      color: white;
      width: 200px;
      transition: all 0.3s ease;
    }

    .search-input:focus {
      background: rgba(255, 255, 255, 0.15);
      width: 250px;
      outline: none;
      color: white;
    }

    .search-input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .search-icon {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: rgba(255, 255, 255, 0.7);
    }

    /* Container adjustment */
    .container {
      position: relative;
      z-index: 1;
    }

    /* Admin Edit Button */
    .admin-actions {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .btn-edit {
      background: linear-gradient(45deg, #ff6ec4, #7873f5);
      border: none;
      border-radius: 25px;
      padding: 8px 20px;
      transition: all 0.3s ease;
      color: white;
    }

    .btn-edit:hover {
      transform: scale(1.05);
      box-shadow: 0 5px 15px rgba(255, 110, 196, 0.4);
    }

    /* Footer Styles */
    .footer {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 1000;
      margin-top: auto;
      width: 100%;
      flex-shrink: 0;
    }

    .footer p {
      font-size: 0.9rem;
    }

    .footer .fa-heart {
      animation: heartbeat 1.5s infinite;
    }

    @keyframes heartbeat {
      0% { transform: scale(1); }
      14% { transform: scale(1.3); }
      28% { transform: scale(1); }
      42% { transform: scale(1.3); }
      70% { transform: scale(1); }
    }
  </style>
</head>
<body>
  <!-- Starfield -->
  <canvas id="starfield"></canvas>

  <!-- Blob -->
  <div class="blob-bg">
    <div class="blob"></div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <div class="navbar-brand">
        <a href="/" class="navbar-item">
          NotesVault
        </a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="search-container">
          <input type="text" class="search-input" id="searchInput" placeholder="Search documents...">
          <i class="fas fa-search search-icon"></i>
        </div>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin"><i class="fas fa-user-shield"></i> Admin</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="main-content">
    <div class="container mt-5">
      <!-- Welcome Section -->
      <div class="welcome-section text-center mb-5">
        <h1 class="display-4 mb-3">Welcome to NotesVault</h1>
        <p class="lead">Your digital library for educational excellence</p>
        <a href="#documents" class="btn btn-primary mt-3">
          <i class="fas fa-book mr-2"></i> View Available Documents
        </a>
      </div>

      <!-- Educational Categories -->
      <div class="row mb-5">
        <div class="col-12">
          <h2 class="section-title mb-4">Educational Categories</h2>
        </div>
        <div class="col-md-3 mb-4">
          <div class="category-card">
            <div class="category-icon">
              <i class="fas fa-laptop-code"></i>
            </div>
            <h3>Computer Science</h3>
            <p>Programming, algorithms, and software engineering resources</p>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="category-card">
            <div class="category-icon">
              <i class="fas fa-calculator"></i>
            </div>
            <h3>Mathematics</h3>
            <p>Algebra, calculus, and mathematical concepts</p>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="category-card">
            <div class="category-icon">
              <i class="fas fa-atom"></i>
            </div>
            <h3>Sciences</h3>
            <p>Physics, chemistry, and biology materials</p>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="category-card">
            <div class="category-icon">
              <i class="fas fa-language"></i>
            </div>
            <h3>Languages</h3>
            <p>English, technical writing, and communication</p>
          </div>
        </div>
      </div>

      <!-- Documents Section -->
      <div class="documents-section" id="documents">
        <div class="row">
          <div class="col-12">
            <h2 class="section-title mb-4">Available Documents</h2>
          </div>
        </div>
      <div class="row" id="documentsContainer">
        <% documents.forEach(function(doc) { %>
          <div class="col-md-4 document-card">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= doc.title.replace('.docx', '') %></h5>
                <p class="card-text">Uploaded on: <%= doc.uploadedAt.toDateString() %></p>
                <div class="card-actions">
                  <a href="/document/<%= doc._id %>" class="btn btn-secondary">
                    <i class="fas fa-eye"></i> View
                  </a>
                  <a href="/download/<%= doc._id %>" class="btn btn-download">
                    <i class="fas fa-download"></i> Download
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Footer -->
  <footer class="footer mt-5 py-3">
    <div class="container text-center">
      <p class="mb-0">
        <span class="text-white-50">Built with <i class="fas fa-heart text-danger"></i> by NotesVault Team</span>
        <br>
        <span class="text-white-50">&copy; <%= new Date().getFullYear() %> NotesVault. All rights reserved.</span>
      </p>
    </div>
  </footer>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <!-- Starfield Animation Script -->
  <script>
    const canvas = document.getElementById('starfield');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    let stars = Array.from({ length: 100 }).map(() => ({
      x: Math.random() * canvas.width,
      y: Math.random() * canvas.height,
      r: Math.random() * 1.5 + 0.5,
      dx: Math.random() * 0.5 + 0.2
    }));

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = 'white';
      stars.forEach(star => {
        ctx.beginPath();
        ctx.arc(star.x, star.y, star.r, 0, 2 * Math.PI);
        ctx.fill();
        star.x -= star.dx;
        if (star.x < 0) {
          star.x = canvas.width;
          star.y = Math.random() * canvas.height;
        }
      });
      requestAnimationFrame(animate);
    }

    animate();

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const cards = document.querySelectorAll('.document-card');
      
      cards.forEach(card => {
        const title = card.querySelector('.card-title').textContent.toLowerCase();
        if (title.includes(searchTerm)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    });

    // Handle window resize
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  </script>
</body>
</html>
