      .about-header h1 {
        opacity: 0;
        transform: translateY(-10px);
        animation: slideDownFade 0.6s ease forwards;
      }

      .about-header p {
        opacity: 0;
        animation: fadeIn 0.6s ease 0.3s forwards;
      }

      .contact-section {
        opacity: 0;
        transform: translateY(20px);
        animation: slideUpFade 0.6s ease forwards;
      }

      .team-section {
        opacity: 0;
        transform: translateY(20px);
